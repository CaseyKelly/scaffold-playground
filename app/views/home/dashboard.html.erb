<p class="lead">Check out all these people, organizations, and aliens!</p>
<p><%= link_to 'New Person', new_person_path %></p>
<p><%= link_to 'New Organization', new_organization_path %></p>
<p><%= link_to 'New Alien', new_alien_path %></p>

<div class="row">
<h1>Listing people</h1>
<table class="col-md-6">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Date of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
    <tr>
      <td><%= person.first_name %></td>
      <td><%= person.last_name %></td>
      <td><%= person.date_of_birth %></td>
      <td><%= link_to 'Show', person %></td>
      <td><%= link_to 'Edit', edit_person_path(person) %></td>
      <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="row">
<h1>Listing organizations</h1>

<table class="col-md-6">
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of employees</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
    <tr>
      <td><%= organization.name %></td>
      <td><%= organization.number_of_employees %></td>
      <td><%= link_to 'Show', organization %></td>
      <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
      <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="row">
<h1>Listing aliens</h1>

<table class="col-md-6">
  <thead>
    <tr>
      <th>Name</th>
      <th>Galaxy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aliens.each do |alien| %>
    <tr>
      <td><%= alien.name %></td>
      <td><%= alien.galaxy %></td>
      <td><%= link_to 'Show', alien %></td>
      <td><%= link_to 'Edit', edit_alien_path(alien) %></td>
      <td><%= link_to 'Destroy', alien, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
